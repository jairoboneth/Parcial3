
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <h2>Login 2Phones</h2>
    <div class="text-danger">
        @ViewBag.Error
    </div>
    <form action="@Url.Content("~/Mensaje/guardarMsg")" method="post">
        <div class="form-group">
            <label>Mis telefonos</label><br />
            @Html.DropDownList("Origen", null, htmlAttributes: new { @class = "form-control", @Name = "origen" })
        
        <br/>
            <label>Contactos</label><br />
            @Html.DropDownList("Origen2", null, htmlAttributes: new { @class = "form-control", @Name = "destino" })

        </div>
        <div>
            <label>Escribe tu mensaje</label><br />
            <textarea class="form-control" name="mensaje"></textarea>
        </div><br />
        <div class="form-group">
            <input type="submit" value="Enviar mensaje" class="btn btn-success" />
            <a href="~/Home/Index" class="btn btn-danger">Cancelar</a>
        </div>

    </form>
 
    <div>
        @if (ViewBag.msg != null)
        {
            <div class=" col-md-12 text-center">
                <h3>Para: </h3>
            </div>
            <div class="col-md-12 d-flex">
                @foreach (var ms in (List<Parcial3.Models.DetalleMsg>)ViewBag.msg)
                {
                    <h5>@ms.MensajeDescripcion</h5>
                }
            </div>


        }
    </div>
</div>
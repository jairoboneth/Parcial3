
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layoutAd.cshtml";
}

<div class="row">
    <h2>Datos Bancarios</h2>
    <div class="text-danger">
        @ViewBag.Error
    </div>
    <form action="@Url.Content("~/DatosB/guradarD")" method="post">
        <div class="form-group col">
            <label>Número de Cuenta</label><br />
            <input type="number" class="form-control" name="norCuenta" required />
        </div>
        <div class="form-group col">
            <label>Saldo</label><br />
            <input type="number" class="form-control" name="saldo" required />
        </div>
        <div class="form-group">
            <input type="submit" value="guardar" class="btn btn-success" />
        </div>
    </form>
</div>